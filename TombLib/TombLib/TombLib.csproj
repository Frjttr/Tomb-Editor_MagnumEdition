<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <LangVersion>6</LangVersion>
    <OutputType>Library</OutputType>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <UseWindowsForms>true</UseWindowsForms>
    <ImportWindowsDesktopTargets>true</ImportWindowsDesktopTargets>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <OutputPath>..\..\Build\</OutputPath>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <UseVSHostingProcess>false</UseVSHostingProcess>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>none</DebugType>
    <OutputPath>..\..\BuildRelease\</OutputPath>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <UseVSHostingProcess>false</UseVSHostingProcess>
    <AllowedReferenceRelatedFileExtensions>
      .allowedextension
    </AllowedReferenceRelatedFileExtensions>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="obj\**" />
    <EmbeddedResource Remove="obj\**" />
    <None Remove="obj\**" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="SharpDX">
      <HintPath>..\..\Libs\SharpDX.dll</HintPath>
    </Reference>
    <Reference Include="SharpDX.D3DCompiler">
      <HintPath>..\..\Libs\SharpDX.D3DCompiler.dll</HintPath>
    </Reference>
    <Reference Include="SharpDX.Direct3D11">
      <HintPath>..\..\Libs\SharpDX.Direct3D11.dll</HintPath>
    </Reference>
    <Reference Include="SharpDX.Direct3D11.Effects">
      <HintPath>..\..\Libs\SharpDX.Direct3D11.Effects.dll</HintPath>
    </Reference>
    <Reference Include="SharpDX.DXGI">
      <HintPath>..\..\Libs\SharpDX.DXGI.dll</HintPath>
    </Reference>
    <Reference Include="SharpDX.Toolkit">
      <HintPath>..\..\Libs\SharpDX.Toolkit.dll</HintPath>
    </Reference>
    <Reference Include="SharpDX.Toolkit.Compiler">
      <HintPath>..\..\Libs\SharpDX.Toolkit.Compiler.dll</HintPath>
    </Reference>
    <Reference Include="SharpDX.Toolkit.Graphics">
      <HintPath>..\..\Libs\SharpDX.Toolkit.Graphics.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <Compile Include="..\..\GlobalAssemblyInfo.cs">
      <Link>GlobalAssemblyInfo.cs</Link>
    </Compile>
    <Compile Include="..\..\GlobalPaths.cs">
      <Link>GlobalPaths.cs</Link>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="$(ProjectDir)obj/$(ConfigurationName)/version.txt">
      <LogicalName>version</LogicalName>
      <Visible>false</Visible>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <None Update="Catalogs\TrCatalog.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <SubType>Designer</SubType>
    </None>
  </ItemGroup>
  <ItemGroup>
    <None Update="Catalogs\NgCatalog.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\DarkUI\DarkUI\DarkUI.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Catalogs\Sounds.tr1.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Catalogs\Sounds.tr2.gold.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Catalogs\Sounds.tr2.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Catalogs\Sounds.tr3.gold.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Catalogs\Sounds.tr3.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Catalogs\Sounds.tr5.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Catalogs\Sounds.tr4.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Catalogs\TEN Sound Catalogs\TEN_ALL_SOUNDS.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Catalogs\TEN Sound Catalogs\TEN_TR1.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Catalogs\TEN Sound Catalogs\TEN_TR2.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Catalogs\TEN Sound Catalogs\TEN_TR3.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Catalogs\TEN Sound Catalogs\TEN_TR4_DEFAULT.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Catalogs\TEN Sound Catalogs\TEN_TR5.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="AssimpNet" Version="5.0.0-beta1" />
    <PackageReference Include="BunLabs.NAudio.Flac.EonZeNx" Version="3.0.1" />
    <PackageReference Include="HashDepot" Version="2.0.3" />
    <PackageReference Include="ksemenenko.ColorThief" Version="1.1.1.4" />
    <PackageReference Include="NAudio" Version="2.1.0" />
    <PackageReference Include="NAudio.Vorbis" Version="1.5.0" />
    <PackageReference Include="NetMiniZ" Version="1.4.0-preview.2" />
    <PackageReference Include="NetMiniZ.Native" Version="1.4.0" />
    <PackageReference Include="NLog" Version="5.0.0" />
    <PackageReference Include="NVorbis" Version="0.10.4" />
    <PackageReference Include="Pfim" Version="0.10.3" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="GeometryIO\IOBone.cs" />
    <Compile Remove="IO\SimplerChunkWriter.cs" />
    <Compile Remove="Script\ScriptCompilerTr4OrTr5.cs" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Remove="D:\Repositories\Tomb-Editor\TombLib\TombLib\obj/Debug/version.txt" />
    <EmbeddedResource Remove="D:\Repositories\Tomb-Editor\TombLib\TombLib\obj/Release/version.txt" />
  </ItemGroup>
  <PropertyGroup>
    <PreBuildEvent>REM Create a file at "$(ProjectDir)obj/$(ConfigurationName)/version.txt" that contains information about the git version.
git describe --tags --long --dirty &gt; "$(ProjectDir)obj/$(ConfigurationName)/versionGit.txt"
set /p HEAD=&lt;"$(SolutionDir).git/HEAD"
set /p COMMIT_HASH=&lt;"$(SolutionDir).git/%25HEAD:~5%25"
set /p GIT_DESCRIBE=&lt;"$(ProjectDir)obj/$(ConfigurationName)/versionGit.txt"
(
echo Head: %25HEAD:~5%25
echo Commit-Hash: %25COMMIT_HASH%25
echo Git-Describe: %25GIT_DESCRIBE%25
)&gt;"$(ProjectDir)obj/$(ConfigurationName)/version.txt"
SET ERRORLEVEL = 0</PreBuildEvent>
  </PropertyGroup>
  <PropertyGroup>
    <PostBuildEvent>xcopy  /s /y /i /q "$(SolutionDir)Libs\Native" "$(TargetDir)Native\"
rmdir /s /q "$(TargetDir)runtimes"
mkdir "$(TargetDir)Runtimes"</PostBuildEvent>
  </PropertyGroup>
</Project>